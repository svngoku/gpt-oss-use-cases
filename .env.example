# HuggingFace API Token (for private models and faster downloads)
HUGGINGFACE_TOKEN=your_token_here

# Weights & Biases API Key (for experiment tracking)
WANDB_API_KEY=your_wandb_key_here

# OpenAI API Key (if using OpenAI models for comparison)
OPENAI_API_KEY=your_openai_key_here

# OpenRouter API Key (for OpenRouter provider)
OPENROUTER_API_KEY=your_openrouter_key_here

# Provider URLs (customize as needed)
OLLAMA_BASE_URL=http://localhost:11434
VLLM_BASE_URL=http://localhost:8000

# Model cache directory
HF_HOME=./models

# Dataset cache directory
HF_DATASETS_CACHE=./data/.cache

# Transformers cache
TRANSFORMERS_CACHE=./models

# CUDA settings (optional)
CUDA_VISIBLE_DEVICES=0

# Number of threads for data loading
OMP_NUM_THREADS=4

# Logging level
LOG_LEVEL=INFO
